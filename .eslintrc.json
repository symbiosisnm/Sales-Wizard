{
    "env": {
        "browser": true,
        "node": true,
        "es2021": true
    },
    "extends": ["eslint:recommended", "plugin:prettier/recommended"],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "ignorePatterns": ["node_modules/", "dist/", "src/assets/", "apps/**/node_modules/", "**/*.ts"],
    "rules": {
        "no-unused-vars": ["error", { "argsIgnorePattern": "^_" }]
    },
    "globals": {
        "cheddar": "readonly",
        "logger": "readonly"
    }
}
