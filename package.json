{
  "name": "cheating-daddy",
  "version": "0.9.0",
  "private": true,
  "main": "app/main/main.js",
  "type": "module",
  "scripts": {
    "dev": "concurrently -k -n BACKEND,APP \"tsx watch backend/server.ts\" \"cross-env VITE_PORT=5173 vite --config vite.config.ts\"",
    "dev:electron": "concurrently -k -n BACKEND,ELECTRON \"tsx watch backend/server.ts\" \"wait-on tcp:3001 && electron-forge start\"",
    "build": "tsc -b && electron-forge package",
    "make": "tsc -b && electron-forge make",
    "lint": "eslint . --ext .ts,.tsx,.js",
    "test": "playwright test"
  },
  "dependencies": {
    "@google/genai": "^1.15.0",
    "express": "^4.19.2",
    "ws": "^8.17.0",
    "multer": "^1.4.5-lts.1",
    "cors": "^2.8.5",
    "zod": "^3.23.8",
    "electron-store": "^8.2.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/ws": "^8.5.10",
    "@types/node": "^22.2.0",
    "@types/react": "^18.3.5",
    "@types/react-dom": "^18.3.5",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^31.2.1",
    "@electron-forge/cli": "^7.0.0",
    "eslint": "^8.57.0",
    "eslint-config-standard-with-typescript": "^43.0.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-n": "^16.0.0",
    "eslint-plugin-promise": "^6.0.0",
    "playwright": "^1.46.0",
    "@playwright/test": "^1.46.0",
    "tsx": "^4.16.2",
    "typescript": "^5.5.4",
    "vite": "^5.3.4",
    "@vitejs/plugin-react": "^4.2.1"
  }
}
